  <h2 class="uppercase text-5xl font-semibold">
    4 de Marzo <span aria-hidden class="hidden md:inline mx-1">·</span><br
      aria-hidden
      class="block md:hidden"
    />
    <span>
      <script is:inline>
        const END_DATE_TEMISTAMP = 1709575200000;
        const date = new Date(END_DATE_TEMISTAMP);
        const hour = date.toLocaleTimeString("es", {
          hour: "2-digit",
          minute: "2-digit",
        });

        const tzOffset = date.getTimezoneOffset() / 60;
        const diff = tzOffset * -1;
        const gmt = diff > 0 ? `GMT+${diff}` : `GMT-${Math.abs(diff)}`;

        const TZ_DICTIONARY = {
          "GMT+1": "CET",
        };

        const tz = TZ_DICTIONARY[gmt] ?? gmt;

        const selfScript = document.currentScript;
        selfScript.parentNode.innerHTML = `${hour} H ${tz}`;
      </script>
    </span>
  </h2>

